<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowAnimationStyle">@style/NoAnimation</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:statusBarColor">@color/blue</item>
        <item name="android:textSize">11sp</item>
        <item name="colorControlActivated">@color/red</item>
    </style>
    <style name="NoAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
    </style>

    <style name="BodaFloatingLabelStyle" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/boda_floating_label_color</item> <!-- selector 연결 -->
    </style>

    <style name="MyTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:textColorHint">@color/boda_floating_label_color</item>
        <item name="boxStrokeColor">@color/boda_textinput_box_stroke_color</item>
        <item name="hintTextColor">@color/boda_floating_label_color</item>
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>
        <item name="colorControlActivated">@color/red</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
    </style>
    <style name="SignUpEditText">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="BottomNavTextBold" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomNavTextNormal" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="BottomNavActiveIndicator">
        <item name="android:shape">rectangle</item>
        <item name="android:radius">8dp</item>  <!-- 둥근 모서리 -->
        <item name="android:color">@color/gray</item> <!-- 활성화 색상 -->
    </style>
    <style name="Btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/boda_button_background</item>
        <item name="android:textColor">@color/boda_button_text</item>
        <item name="cornerRadius">10dp</item>
    </style>


    <style name="SettingsButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="fontFamily">@font/pretendard_bold</item>
        <item name="iconGravity">end</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="iconTint">@android:color/black</item>
        <item name="backgroundTint">@android:color/white</item>
        <item name="cornerRadius">3dp</item>
        <item name="iconPadding">8dp</item>
        <item name="icon">@drawable/ic_arrow_right</item>
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>

    </style>



</resources>

