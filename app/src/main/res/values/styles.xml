<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowAnimationStyle">@style/NoAnimation</item>
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">11sp</item>
    </style>
    <style name="NoAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
    </style>

    <style name="HintTextStyle">
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="CustomHintTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/black</item> <!-- 힌트 텍스트 색상 -->

    </style>
    <style name="MyTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/black</item>
        <item name="boxStrokeColor">@color/custom_stroke_color</item>
        <item name="color">@color/black</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="hintTextAppearance">@style/CustomHintTextAppearance</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
    </style>
    <style name="SignUpEditText">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:singleLine">true</item>

    </style>
    <style name="BottomNavTextBold" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomNavTextNormal" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="BottomNavActiveIndicator">
        <item name="android:shape">rectangle</item>
        <item name="android:radius">8dp</item>  <!-- 둥근 모서리 -->
        <item name="android:color">@color/gray</item> <!-- 활성화 색상 -->
    </style>

    <style name="SettingsButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="fontFamily">@font/pretendard_bold</item>
        <item name="iconGravity">end</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="iconTint">@android:color/black</item>
        <item name="backgroundTint">@android:color/white</item>
        <item name="cornerRadius">3dp</item>
        <item name="rippleColor">#F1F1F1</item>
        <item name="iconPadding">8dp</item>
        <item name="icon">@drawable/ic_arrow_right</item>
    </style>
</resources>

